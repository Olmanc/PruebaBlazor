@page "/"
@attribute [Authorize(Roles = "1,2")]

<PageTitle>Index</PageTitle>
<AuthorizeView>
    <Authorized>
        <h1 style="text-align:center; color: white; font-size:2.4rem">Hola, @context.User.Identity.Name</h1>

        
    </Authorized>
    <NotAuthorized>
        <h1 style="text-align:center; color: white; font-size:2.4rem">Intente en otra vida</h1>
    </NotAuthorized>
</AuthorizeView>

@if (messageShown)
{
    <MessageWindow title="@messageTitle" message="@messageBody" type="@messageType" imageUrl="@messageImage" OnClose="hideMessage"></MessageWindow>
}

