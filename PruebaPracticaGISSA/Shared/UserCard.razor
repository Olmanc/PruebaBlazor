@using PruebaPracticaGISSA.Data;
@inject DbService DbService;


<div class="UserCard" @onmouseover="ShowButton" @onmouseout="HideButton">
    <article @onclick="() => OnUserCardClicked(User.Id)">
        <figure class="user-card-image">
            <img src="https://img.freepik.com/free-photo/wide-angle-shot-single-tree-growing-clouded-sky-during-sunset-surrounded-by-grass_181624-22807.jpg?w=900&t=st=1687123388~exp=1687123988~hmac=f3410d0a5c2f20aec66c7d763c789bf0aae9c5026366fe41ae7d18e05e7e406b"
                 alt="Preview">
        </figure>
        
        
        <div class="article-preview">
            <h2>@User.Nombre @User.PrimerApellido @User.SegundoApellido</h2>
            <p>@User.TipoUsuario</p>
        </div>
    </article>
    @if (isButtonVisible)
    {
        <button class="red-circle" @onclick="() => DeleteUser(User.Id)">x</button>
    }
</div>